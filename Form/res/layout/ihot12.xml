    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="10. How much of the time are you aware of the disability in your hip?"
    android:layout_below="@id/ihotq9hint"
    android:paddingTop="6dp"
    android:paddingBottom="2dp">
    
</TextView>
<SeekBar
    android:id="@+id/ihotq10seek"
