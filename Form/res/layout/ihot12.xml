<TextView 
    android:id="@+id/ihotq8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="8. How concerned are you about picking up or carrying children because of your hip?"
    android:layout_below="@id/ihotq7hint"
