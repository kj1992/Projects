<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="100">
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="90">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="Please use the selector below to mark answers to the questions."
    android:id="@+id/ihottitle"></TextView>

<TextView 
    android:id="@+id/ihotq1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1. Overall how much pain do you have in your hip/groin?"
    android:layout_below="@id/ihottitle"
    android:paddingTop="6dp"
    android:paddingBottom="2dp">
    
</TextView>
<SeekBar
    android:id="@+id/ihotq1seek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ihotq1"
    android:max="100"
    
    ></SeekBar>
<TextView 
    android:id="@+id/ihotq1hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0 - No pain at all, 100 - Extreme Pain"
    android:layout_below="@id/ihotq1seek"
    android:paddingTop="2dp"
    >
    
</TextView>
<TextView 
    android:id="@+id/ihotq2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2. How difﬁcult is it for you to get up and down off the ﬂoor/ground?"
    android:layout_below="@id/ihotq1hint"
    android:paddingTop="6dp"
    android:paddingBottom="2dp">
    
</TextView>
<SeekBar
    android:id="@+id/ihotq2seek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ihotq2"
    android:max="100"
    
    ></SeekBar>
<TextView 
    android:id="@+id/ihotq2hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0 - No Difficulty at all, 100 - Extreme Difficulty"
    android:layout_below="@id/ihotq2seek"
    android:paddingTop="2dp"
    >
    
</TextView>

<TextView 
    android:id="@+id/ihotq3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="3. How difﬁcult is it for you to walk long distances?"
    android:layout_below="@id/ihotq2hint"
    android:paddingTop="6dp"
    android:paddingBottom="2dp">
    
</TextView>
<SeekBar
    android:id="@+id/ihotq3seek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
