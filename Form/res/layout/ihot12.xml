<TextView 
    android:id="@+id/ihotq7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="7. How much pain do you experience in you hip after activity?"
    android:layout_below="@id/ihotq6hint"
    android:paddingTop="6dp"
    android:paddingBottom="2dp">
    
</TextView>
<SeekBar
    android:id="@+id/ihotq7seek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
