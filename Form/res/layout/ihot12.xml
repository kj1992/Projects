    android:layout_below="@id/ihotq4seek"
    android:paddingTop="2dp"
    >
    
</TextView>

<TextView 
    android:id="@+id/ihotq5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5. How much trouble do you have pushing, pulling, lifting or carrying heavy objects at work?"
    android:layout_below="@id/ihotq4hint"
