<LinearLayout android:id="@+id/ihotq9"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:weightSum="100"
              android:layout_below="@id/ihotq8hint"
              android:orientation="horizontal">
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="9. How much trouble do you have with sexual activity because of your hip?"
    android:paddingTop="6dp"
    android:paddingBottom="2dp"
    android:layout_weight="70"></TextView>
    <CheckBox android:id="@+id/ihotq9check"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:layout_weight="30"
              android:text="N/A"
        ></CheckBox>
    
</LinearLayout>"

<SeekBar
    android:id="@+id/ihotq9seek"
    android:layout_width="match_parent"
