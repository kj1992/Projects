<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="100">
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="90"
    
    >
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="Under each heading, please tick the ONE box that best describes your health TODAY"
    android:id="@+id/eq5dtitle"></TextView>
    
    <TextView 
    android:id="@+id/eq5dq1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="MOBILITY"
    android:layout_below="@id/eq5dtitle"
    android:textSize="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="2dp"
    android:textStyle="bold"
    android:paddingLeft="6dp"></TextView>
    <CheckBox 
        android:id="@+id/eq5dq1c1"
        android:layout_below="@id/eq5dq1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="I have no problems in walking about"
        android:textSize="15dp"
       >
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq1c2"
        android:layout_below="@id/eq5dq1c1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have slight problems in walking about"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq1c3"
        android:layout_below="@id/eq5dq1c2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have moderate problems in walking about"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq1c4"
        android:layout_below="@id/eq5dq1c3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have severe problems in walking about"
        android:textSize="15dp">
        
    </CheckBox>
    
      <CheckBox 
        android:id="@+id/eq5dq1c5"
        android:layout_below="@id/eq5dq1c4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I am unable to walk about"
        android:textSize="15dp">
        
    </CheckBox>
    
     <TextView 
    android:id="@+id/eq5dq2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SELF-CARE"
    android:layout_below="@id/eq5dq1c5"
    android:textSize="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="2dp"
    android:textStyle="bold"
    android:paddingLeft="6dp"></TextView>
    <CheckBox 
        android:id="@+id/eq5dq2c1"
        android:layout_below="@id/eq5dq2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have no problems washing or dressing myself"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq2c2"
        android:layout_below="@id/eq5dq2c1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have slight problems washing or dressing myself"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq2c3"
        android:layout_below="@id/eq5dq2c2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have moderate problems washing or dressing myself"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq2c4"
        android:layout_below="@id/eq5dq2c3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have severe problems washing or dressing myself"
        android:textSize="15dp">
        
    </CheckBox>
    
      <CheckBox 
        android:id="@+id/eq5dq2c5"
        android:layout_below="@id/eq5dq2c4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I am unable to wash or dress myself"
        android:textSize="15dp">
        
    </CheckBox>

      <TextView 
    android:id="@+id/eq5dq3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="USUAL ACTIVITIES" 
    android:textStyle="bold"   
    android:layout_below="@id/eq5dq2c5"
    android:paddingTop="10dp"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp"
    android:textSize="20dp"></TextView>
    <CheckBox 
        android:id="@+id/eq5dq3c1"
        android:layout_below="@id/eq5dq3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have no problems doing my usual activities"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq3c2"
        android:layout_below="@id/eq5dq3c1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have slight problems doing my usual activities"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq3c3"
        android:layout_below="@id/eq5dq3c2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have moderate problems doing my usual activities"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq3c4"
        android:layout_below="@id/eq5dq3c3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have severe problems doing my usual activities"
        android:textSize="15dp">
        
    </CheckBox>
    
      <CheckBox 
        android:id="@+id/eq5dq3c5"
        android:layout_below="@id/eq5dq3c4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I am unable to do my usual activities"
        android:textSize="15dp">
        
    </CheckBox>
 
    <TextView 
    android:id="@+id/eq5dq4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="PAIN/DISCOMFORT" 
    android:textStyle="bold"   
    android:layout_below="@id/eq5dq3c5"
    android:paddingTop="10dp"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp"
    android:textSize="20dp"></TextView>
    <CheckBox 
        android:id="@+id/eq5dq4c1"
        android:layout_below="@id/eq5dq4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have no pain or discomfort"
       android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq4c2"
        android:layout_below="@id/eq5dq4c1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have slight pain or discomfort"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq4c3"
        android:layout_below="@id/eq5dq4c2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have moderate pain or discomfort"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq4c4"
        android:layout_below="@id/eq5dq4c3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have severe pain or discomfort"
        android:textSize="15dp">
        
    </CheckBox>
    
      <CheckBox 
        android:id="@+id/eq5dq4c5"
        android:layout_below="@id/eq5dq4c4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I have extreme pain or discomfort"
        android:textSize="15dp">
        
    </CheckBox>  
    
      <TextView 
    android:id="@+id/eq5dq5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ANXIETY/DEPRESSION" 
    android:textStyle="bold"   
    android:layout_below="@id/eq5dq4c5"
    android:paddingTop="10dp"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp"
    android:textSize="20dp"></TextView>
    <CheckBox 
        android:id="@+id/eq5dq5c1"
        android:layout_below="@id/eq5dq5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I am not anxious or depressed "
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq5c2"
        android:layout_below="@id/eq5dq5c1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I am slightly anxious or depressed"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq5c3"
        android:layout_below="@id/eq5dq5c2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I am moderately anxious or depressed"
        android:textSize="15dp">
        
    </CheckBox>
    
     <CheckBox 
        android:id="@+id/eq5dq5c4"
        android:layout_below="@id/eq5dq5c3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I am severely anxious or depressed"
        android:textSize="15dp">
        
    </CheckBox>
    
      <CheckBox 
        android:id="@+id/eq5dq5c5"
        android:layout_below="@id/eq5dq5c4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="I am extremely anxious or depressed"
        android:textSize="15dp">
        
    </CheckBox>  
    
      <TextView 
    android:id="@+id/eq5dq6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Use the Following scale to describe your health today from 0 to 100" 
    android:layout_below="@id/eq5dq5c5"
    android:paddingTop="10dp"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp"
    android:textSize="20dp"></TextView>
   <LinearLayout android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" 
       android:weightSum="100"
        android:layout_below="@id/eq5dq6"
        android:id="@+id/eq5dq6seeklayout">
      <SeekBar
    android:id="@+id/eq5dq6seek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:max="100"
    android:layout_weight="10"
    ></SeekBar>
      <TextView android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="0"
          android:id="@+id/eq5dq6seeknumber"
          android:layout_weight="90"/> </LinearLayout>
      <TextView 
    android:id="@+id/eq5dq6hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0 - Worst Health, 100 - Best Health"
    android:layout_below="@id/eq5dq6seeklayout"
    android:paddingTop="2dp"
    >
          
      </TextView>
      <LinearLayout
     android:id="@+id/eq5dq7"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:weightSum="100"
     android:layout_below="@id/eq5dq6hint"
     android:orientation="horizontal"
          >
    <TextView 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your health today in Numerals : " 
    android:paddingTop="6dp"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp"
    android:layout_weight="70"
    android:textSize="20dp">   
     </TextView>
     <EditText
         android:id="@+id/eq5dq7a"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:layout_weight="30"
         android:inputType="number"
         android:singleLine="true"
         android:maxEms="100"
         />
    </LinearLayout>
    </RelativeLayout>
    
    
</ScrollView>

<LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" 
         android:layout_weight="10"
         android:orientation="horizontal"
         android:weightSum="100"
    >
    <Button 
         android:id="@+id/eq5dcancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:text="Cancel"
         android:layout_weight="50"
         android:gravity="center">
        
    </Button>
     <Button 
         android:id="@+id/eq5dsave"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" 
         android:text="Save"
         android:layout_weight="50"
         android:gravity="center">
        
    </Button>
    
</LinearLayout>

</LinearLayout>
